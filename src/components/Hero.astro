---
// src/components/Hero.astro
import '../assets/css/hero.css';

interface Props {
  fullName: string;
  shortTitle: string;
  portfolioTitle: string;
  portfolioDescription: string;
  portfolioName: string;
  portfolioSurname: string;
}

const {
  fullName,
  shortTitle,
  portfolioTitle,
  portfolioDescription,
  portfolioName,
  portfolioSurname,
} = Astro.props;
---

<section id="home" class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <span class="greeting">¡Hola! Soy</span>
      <h1 class="hero-name">{fullName}</h1>
      <h2 class="hero-title">{portfolioTitle}</h2>
      <p class="hero-description">{portfolioDescription}</p>
      <div class="cta-buttons">
        <a href="#contact" class="btn-primary">Contáctame</a>
        <a href="#about" class="btn-secondary">Conoce más</a>
      </div>
    </div>
    <div class="hero-image">
      <div class="avatar-circle">
        <span class="avatar-text"
          >{portfolioName.charAt(0)}{portfolioSurname.charAt(0)}</span
        >
      </div>
    </div>
  </div>
</section>

